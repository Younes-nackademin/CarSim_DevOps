@{
    ViewData["Title"] = "Car Simulator";
}
@model SimulationViewModel

<div class="text-center">
    @if (!Model.IsRunning)
    {
        <h1 class="display-4">CAR SIMULATOR</h1>

        <div class="status-card">
            <p>YOUR DRIVER: @Model.DriverName</p>
            <p>CITY: @Model.City</p>
            <p>COUNTRY: @Model.Country</p>

            <p class="status-message">DO YOU WANT TO START?</p>
        </div>

        <form asp-action="Index" method="post">
            <input type="hidden" asp-for="Driver.First" />
            <input type="hidden" asp-for="Driver.Last" />
            <input type="hidden" asp-for="IsRunning" value="true" />
            <button type="submit" class="btn">START SIMULATION</button>
        </form>
    }
    else
    {
        <div class="status-card">
            <h2>STATUS</h2>
            <ul>
                <li>DRIVER: @Model.DriverName</li>
                <li>DIRECTION: @Model.CurrentStatus.CardinalDirection</li>
                <li>GAS: @Model.CurrentStatus.GasValue</li>
                <li>ENERGY: @Model.CurrentStatus.EnergyValue</li>
            </ul>

            @if (!string.IsNullOrEmpty(Model.DriverStatusMessage))
            {
                <p class="status-message-warning">
                    @Model.DriverStatusMessage
                    @if (Model.CurrentStatus.EnergyValue == 0)
                    {
                        <img src="../warning.png" alt="Warning" style="width:1em;vertical-align:middle;" />
                    }
                </p>
            }

            @if (!string.IsNullOrEmpty(Model.CarStatusMessage))
            {
                <p class="status-message-warning">
                    @Model.CarStatusMessage
                    @if (Model.CurrentStatus.GasValue == 0)
                    {
                        <img src="../warning.png" alt="Warning" style="width:1em;vertical-align:middle;" />
                    }
                </p>
            }

            <p class="status-message">@Model.CurrentActionMessage</p>
        </div>

        <div class="selection">
            <form asp-action="Index" method="post">
                <label for="SelectedAction">SELECT AN ACTION:</label>
                <select asp-for="SelectedAction" class="form-select" required>
                    <option value="">-- CHOOSE AN OPTION --</option>
                    <option value="1">TURN LEFT</option>
                    <option value="2">TURN RIGHT</option>
                    <option value="3">DRIVE FORWARD</option>
                    <option value="4">REVERSE</option>
                    <option value="5">TAKE A REST</option>
                    <option value="6">REFUEL THE CAR</option>
                    <option value="7">EXIT</option>
                </select>

                <br />
                <input type="hidden" asp-for="Car.CardinalDirection" />
                <input type="hidden" asp-for="Car.GasValue" />
                <input type="hidden" asp-for="IsRunning" />
                <input type="hidden" asp-for="CurrentStatus.MovementAction" />
                <input type="hidden" asp-for="CurrentStatus.CardinalDirection" />
                <input type="hidden" asp-for="CurrentStatus.EnergyValue" />
                <input type="hidden" asp-for="CurrentStatus.GasValue" />
                <input type="hidden" asp-for="Driver.First" />
                <input type="hidden" asp-for="Driver.Last" />

                <button type="submit" class="btn btn-success">SUBMIT</button>
            </form>
        </div>
    }
</div>
